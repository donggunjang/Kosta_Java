package com.kosta.game5;

public class Enermy extends GraphicObject {
	private int dx = -10;
	
	// 부모 클래스 생성자에 적으로 사용할 이미지 파일을 전달하여 이미지 객체를 생성. 
	public Enermy(String name) {
		super(name);
		x = 500;
		y = 0;
	}
	
	// 적을 좌우로 계속 움직이게 만든다.
	public void update() {
		x += dx;
		if(x<0) {
			dx = +10;
		}
		if(x>500) {
			dx = -10;
		}
	}
	
}
