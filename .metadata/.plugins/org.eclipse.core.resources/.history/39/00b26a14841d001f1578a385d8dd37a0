package com.kosta.game5;

public class Enermy extends GraphicObject {
	
	//Enermy를 가로방향으로 왔다 갔다 하도록 한다.
	//맨처음 이동거리를 -10으로 설정하여 왼쪽으로 10만큼 이동.
	private int dx = -10;
	
	// 적으로 사용할 이미지 파일명을 매개 변수로 전달 받는다
	public Enermy(String name) {
		//부모 클래스 생성자에 전달
		super(name);
		x = 500;
		y = 0;
	}
	
	// 적을 좌우로 계속 움직이게 만든다.
	
	public void update() {
		x += dx;
		if(x<0) {
			dx = +10;
		}
		if(x>500) {
			dx = -10;
		}
	}
	
}
